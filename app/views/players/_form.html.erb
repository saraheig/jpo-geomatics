<%= form_with(model: player, local: true) do |form| %>
  <% if player.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(player.errors.count, "erreur identifiée", "erreurs identifiées") %> :</h2>
      <% player.errors.messages.values.each do |message| %>
        <%= message[0] %><br/>
      <% end %>
    </div>
  <% end %>

  <hr/><h3 class="title is-5">Information sur le joueur</h3>

  <div class="field">
    Pseudo du joueur* : <br/>
    <%= form.text_field :pseudo %>
  </div>

  <div class="field">
    E-mail du joueur* : <br/>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    Défi Construction & Infrastructures (score entre 0 et 100) :
    <%= form.number_field :score_gci %>
  </div>

  <div class="field">
    Défi Génie de l'Environnement (score entre 0 et 100) :
    <%= form.number_field :score_gen %>
  </div>

  <div class="field">
    Défi Géomatique et Gestion du territoire (score entre 0 et 100) :
    <%= form.number_field :score_geo %>
  </div>

  <hr/>
  <h6>* Champs obligatoires</h6><br/>
  <div class="actions">
    <%= form.submit "Enregistrer" %>
  </div>
<% end %>
